{
  "name": "academic-hub",
  "private": true,
  "version": "1.0.0",
  "description": "A desktop academic planning hub for tracking modules, timetable, analytics, and graduation goals.",
  "author": "Academic Hub Team",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "ELECTRON=true concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "clean:release": "node ./scripts/cleanRelease.js",
    "build": "tsc -b && vite build",
    "build:electron": "npm run clean:release && ELECTRON=true tsc -b && ELECTRON=true vite build && electron-builder",
    "build:mac": "npm run clean:release && ELECTRON=true tsc -b && ELECTRON=true vite build && electron-builder --mac",
    "build:win": "npm run clean:release && ELECTRON=true tsc -b && ELECTRON=true vite build && electron-builder --win",
    "build:linux": "npm run clean:release && ELECTRON=true tsc -b && ELECTRON=true vite build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "@eslint/js": "^9.39.1",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "framer-motion": "^12.31.0",
    "globals": "^16.5.0",
    "immer": "^11.1.3",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "uuid": "^13.0.0",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3",
    "zustand": "^5.0.11"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  },
  "build": {
    "appId": "com.ntu.academichub",
    "productName": "Academic Hub",
    "icon": "build/icons/icon_1024x1024.png",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "build/icons/icon.icns",
      "identity": null,
      "target": [
        "dmg",
        "zip"
      ]
    },
    "afterPack": "./scripts/afterPack.js",
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icons/icon_1024x1024.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Education"
    }
  }
}
